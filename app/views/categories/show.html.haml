- content_for :actions do
  = link_to datagroups_path do
    = image_tag "list-ordered.png"
    List Datagroups

%h2= "Category: #{@category.short}"
%h4 Long
%p= @category.long
%h4 Description
%p= @category.description
%h4 Comment
%p= @category.comment
- unless @category.datagroup.blank?
  %h4 Datagroup
  %p= link_to @category.datagroup.title, @category.datagroup

- unless @datasets.blank?
  %h3 Datasets
  %ul
    - @datasets.each do |ds|
      %li
        = render :partial => ds, :locals => {:with_cart => true, :with_comment => false}
