= content_for :actions do
  %p
    = link_to :new_paperproposal do
      = image_tag("document.png")
      Create new Paperproposal

%h2 Paper Proposals

- pp_select = @paperproposals.select{|p| p.state == 'accepted'}
- unless pp_select.blank?
  %h3 Published
  = render :partial => 'list', :locals => {:paperproposals => pp_select, :with_lock => true}

- pp_select = @paperproposals.select{|p| p.state == 'in review'}
- unless pp_select.blank?
  %h3 In review
  = render :partial => 'list', :locals => {:paperproposals => pp_select, :with_lock => true}

- pp_select = @paperproposals.select{|p| p.state == 'manuscript avaible'}
- unless pp_select.blank?
  %h3 Manuscript avaible
  = render :partial => 'list', :locals => {:paperproposals => pp_select, :with_lock => true}

- pp_select = @paperproposals.select{|p| p.state == 'in prep'}
- unless pp_select.blank?
  %h3 In preparation
  = render :partial => 'list', :locals => {:paperproposals => pp_select, :with_lock => true}

