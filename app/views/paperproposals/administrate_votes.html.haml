- page_title "Administrate Votes for #{@paperproposal.title}"

= content_for :actions do
  %ul
    %li
      = link_to admin_approve_all_votes_paperproposal_url(@paperproposal), :confirm => 'Are you sure?' do
        = image_tag 'checkbox.png'
        Approve the votes
    %li
      = link_to admin_reset_all_votes_paperproposal_url(@paperproposal), :confirm => 'Are you sure?' do
        = image_tag 'cancel.png'
        Reset the votes
    %li
      = link_to admin_hard_reset_paperproposal_url(@paperproposal), :confirm => 'This will delete all votes and download rights. Are you sure?' do
        = image_tag 'cancel.png'
        Hard reset proposal

%h2
  Administrate Votes for
  = link_to @paperproposal.title, @paperproposal

%h3= @votes_type_text

- @votes.each do |vote|
  %h4
    On behalf of
    = link_to vote.user.to_label, vote.user
  =render :partial => 'paperproposals/open_vote', :locals => {:vote => vote}


