= content_for :actions do
  %ul
    %li
      = link_to 'Reset the votes',admin_reset_all_votes_paperproposal_url(@paperproposal)
    %li
      = link_to 'Approve the votes', admin_approve_all_votes_paperproposal_url(@paperproposal)

%h2
  Administrate Votes for
  = link_to @paperproposal.title, @paperproposal

%h3= @votes_type_text

- @votes.each do |vote|
  %h4
    On behalf of
    = link_to vote.user.to_label, vote.user
  =render :partial => 'paperproposals/open_vote', :locals => {:vote => vote}


