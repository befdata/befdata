= form_for freeformat, :url => {:controller => :freeformats, :action => :update, :id => freeformat.id, :dataset_id => dataset.id},
:html => {:multipart => true} do |f|
  = f.error_messages
  = f.hidden_field :id
  = f.hidden_field :dataset_id
  = f.file_field :file
  %br
  = f.text_area :description, :size => "40x4", :value => freeformat.description
  = f.submit 'File upload'