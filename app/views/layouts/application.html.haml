!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}
    %title Biodiversity
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = active_scaffold_includes
    = csrf_meta_tag
  %body
    - unless Rails.env == 'production'
      #rails_env_notice{:style => 'background-color: #fafad2'}= "You are currently working under #{Rails.env} environment."
    #header
      #logo
        %h1 BEF â€“ China Project Database
        %p Biodiversity Ecosystem Functioning
        #menu
          %ul#sf-menu.sf-menu.superfish
            %li.first= link_to 'Home', root_path
            %li= link_to 'Projects', projects_path
            %li= link_to 'Staff', users_path
            %li= link_to 'Data', data_path
            %li= link_to 'Help', help_path
            %li= link_to 'Impressum', impressum_path
            - if current_user
              %li= link_to image_tag("/images/page.png", :title => 'Paperproposal'), :paperproposals
              %li= link_to image_tag("/images/user_edit.png", :title => 'Profile'), profile_path
              %li= link_to image_tag("/images/cart.png", :title => 'Cart'), current_cart_url
              - if current_user.has_role?(:admin)
                %li= link_to image_tag("/images/admin.png", :title => "Admin"), admin_datasets_path
              %li= link_to image_tag("/images/logout.png", :title => "Logout"), logout_path
            - else
              %li= link_to 'Login', login_path
    #page
      #content
        - if flash[:error]
          #error
            = flash[:error]
        - if flash[:notice]
          #error
            = flash[:notice]
        = yield
    #footer
      %p
        %a{:href => "http://www.dfg.de/jahresbericht/detail_3_2_BIO_891.htm"}= image_tag 'dfglogo.png'
        %a{:href => "http://www.bgc-jena.mpg.de/bgc-organisms/"}= image_tag 'obglogo.png'
        %a{:href => "http://www.bef-china.de/"}= image_tag 'beflogo.png', :height => '70px'