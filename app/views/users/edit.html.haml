%h2
  Editing profile of #{link_to @user.full_name, user_path(@user.path_name)}
.box
  = form_for @user, :html=>{:multipart=>true} do |u|
    = u.label :login
    = u.text_field :login

    = u.label :password
    = u.password_field  :password

    = u.label :password_confirmation
    = u.password_field :password_confirmation

    = u.label :firsname
    = u.text_field :firstname

    = u.label :middlenames
    = u.text_field :middlenames

    = u.label :lastname
    = u.text_field :lastname

    = u.label :email
    = u.text_field :email

    = u.label :salutation
    = u.text_field :salutation

    = u.label :institution_name
    = u.text_field :institution_name

    = u.label :institution_url
    = u.url_field :institution_url

    = u.label :institution_phone
    = u.phone_field :institution_phone

    = u.label :institution_fax
    = u.text_field :institution_fax

    = u.label :url
    = u.url_field :url

    = u.label :country
    = u.text_field :country

    = u.label :city
    = u.text_field :city

    = u.label :street
    = u.text_field :street

    = u.label :comment
    = u.text_area :comment

    = u.label :avatar
    = u.file_field :avatar
    %div
      = u.submit "Save"

- unless @project_board_votes.empty?
  %h3 Project Board Votes
  - @project_board_votes.each do |vote|
    %div.box
      %h3
        = "Paper Proposal:"
        = link_to vote.paperproposal.title, vote.paperproposal
      %p
        Rational:
        = vote.paperproposal.rationale
      %p
        Author List:
        != author_list_formatter(vote.paperproposal.author_list)
      - form_for vote, :url => update_vote_path(vote) do |form|
        - if vote.vote == "none"
          Accept or reject?
          = form.select :vote, ["accept", "reject"]
          %br
          = form.label :comment
          = form.text_field :comment
          = form.submit "Send your vote"
        - else
          Your vote was:
          = vote.vote

