

<% form_for @data_column, :url => {:action => :update_data_header,
     :controller => :import} do |form| %>
  <%= form.hidden_field :id %>
  <%= form.label :methodstep_id, "Which method seems suitable?" %>
  <%= form.select(:methodstep_id, 
                  @methods_short_list,
	          :prompt => "Select please") %>
  <%= form.submit "Choose another method available from the portal"%>
<% end %>
