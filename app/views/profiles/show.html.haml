= content_for :actions do
  = link_to edit_profile_path do
    = image_tag "edit.png"
    = "Edit My profile"
  = link_to votes_profile_path do
    = image_tag "checkbox.png"
    = "Data requests"
  = link_to new_dataset_path do
    = image_tag "file-upload.png"
    = "Create dataset"
  = link_to new_paperproposal_path do
    = image_tag "document.png"
    = "Create paperproposal"

= content_for :info do
  %h3 My login credentials
  %div
    = text_field_tag :single_access_token, @user.try(:single_access_token), :id => "api",
      :readonly => true, :onclick => 'this.select();'
    = link_to update_credentials_profile_path, method: :post, remote: true, id: 'change_api' do
      = image_tag "reload.gif", title: "Change one", :size => '13x13'

= render :template => 'users/show'

:javascript
  $(function(){
    $("#change_api").click(function(){
      $(this).find("img").attr("src","#{asset_path('reloading.gif')}");
    });
  });
